        </referenceBlock>
        <referenceContainer name="content">

            <block class="Bakeway\UpcomingOrders\Block\View\View" name="upcoming_orders" cacheable="false" template="upcomingorders.phtml" />
        </referenceContainer>
    </body>
</page>
